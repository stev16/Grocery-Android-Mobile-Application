<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/coName_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coQuantity_item"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/coName_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coName_item" />

    <TextView
        android:id="@+id/coPrice_Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="520dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/coQuantity_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coQuantity_item"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="RM"
        app:layout_constraintBottom_toBottomOf="@+id/coQuantity_item"
        app:layout_constraintStart_toEndOf="@+id/coQuantity_item"
        app:layout_constraintTop_toTopOf="@+id/coQuantity_item" />
</androidx.constraintlayout.widget.ConstraintLayout>